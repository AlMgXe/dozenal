#!/bin/sh
# +AMDG  This document was begun on 8 August 2010, the feast
# of St. John Vianney, and it is humbly dedicated to him and
# to the Immaculate Heart of Mary for their prayers, and to
# the Sacred Heart of Jesus for His mercy.

processor=`uname -a`;
if `echo $processor | grep -q "i.86"`
then
	sed s/-lm\ /-lm\ -march=pentium4\ -msse\ -mfpmath=sse\ / < \
	./doz/Makefile.old > ./doz/Makefile;
	sed s/-lm\ /-lm\ -march=pentium4\ -msse\ -mfpmath=sse\ / < \
	./dozdc/Makefile.old > ./dozdc/Makefile;
	sed s/-lm\ /-lm\ -march=pentium4\ -msse\ -mfpmath=sse\ / < \
	./tgmconv/Makefile.old > ./tgmconv/Makefile;
else
	mv ./doz/Makefile.old ./doz/Makefile;
	mv ./dozdc/Makefile.old ./dozdc/Makefile;
	mv ./tgmconv/Makefile.old ./tgmconv/Makefile;
fi
